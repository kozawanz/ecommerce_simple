@model IEnumerable<eCommerce.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Product Categories</h1>

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <p class="card-text">@category.Description</p>
                    <p class="card-text"><small class="text-muted">Products: @category.Products.Count()</small></p>
                    <a asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
    }
</div>

