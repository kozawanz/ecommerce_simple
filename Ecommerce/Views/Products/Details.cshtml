@model eCommerce.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            
            <p>@Model.Description</p>
            <h3 class="text-primary">$@Model.Price.ToString("0.00")</h3>
            <p>In Stock: @Model.StockQuantity</p>
            
            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" name="quantity" id="quantity" class="form-control" value="1" min="1" max="@Model.StockQuantity" style="width: 100px;">
                </div>
                <button type="submit" class="btn btn-success mt-3">Add to Cart</button>
            </form>
            
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary mt-3">Back to Products</a>
        </div>
    </div>
</div>

